.PHONY: help
help: ## Display this help in a box format
	@echo "Usage: make [target]"
	@echo "┌──────────────────────────────┬───────────────────────────────────────────────────────────────┐"
	@echo "│ Target                       │ Description                                                   │"
	@echo "├──────────────────────────────┼───────────────────────────────────────────────────────────────┤"
	@awk 'BEGIN {FS = ":.*?## ";} /^[a-zA-Z_-]+:.*?## / {printf("│ %-28s │ %-61s │\n", $$1, $$2)}' $(MAKEFILE_LIST)
	@echo "└──────────────────────────────┴───────────────────────────────────────────────────────────────┘"
